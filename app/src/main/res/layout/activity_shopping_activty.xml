<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShoppingActivty">


    <RelativeLayout
        android:id="@+id/relative_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkwhite"
        >
        <TextView
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoppings"
            android:textSize="20dp"
            android:textColor="@color/orange"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="30sp"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/relative_head"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/mcqBooks"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:text="MCQ Books(Division)"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonlogin"/>

            <Button
                android:id="@+id/theory_books"
                android:layout_marginTop="25dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:text="Theory Books"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonlogin"/>


            <Button
                android:id="@+id/f2fClasses"
                android:textStyle="bold"
                android:layout_marginTop="25sp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:text="Individual Face to Face Classes"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonlogin"/>






        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>