<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DNAKnowmoreActivity">


    <RelativeLayout
        android:id="@+id/relativeHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
             android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="MARROW"/>
            <Button
                android:layout_marginTop="5dp"
                android:background="@color/gradStart"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edition 3.0"/>

            <TextView
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Built by legendary teachers and Dailyrounds"
               android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/doctor"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr.Deepu Singh"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MD, Internal Medicine"

                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/doctor"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr.Deepu Singh"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MD, Internal Medicine"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/doctor"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr.Deepu Singh"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MD, Internal Medicine"

                        />



                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/gradStop"
                    android:text="An evidence based online platform for NEET PG Medicine with QBank,Text Series and high yield videos."/>



            </LinearLayout>


           <android.support.v7.widget.CardView

               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="190dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout

                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_marginTop="8dp"
                           android:layout_marginLeft="18sp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="QBank"
                           android:textSize="20dp"/>

                       <Button
                           android:layout_marginLeft="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Edition 3.0"
                           android:textColor="@color/white"
                           android:background="@color/dashboardtop"
                           />
                   </LinearLayout>


               </LinearLayout>


           </android.support.v7.widget.CardView>





        </LinearLayout>








    </RelativeLayout>

</ScrollView>